<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0015FA" />
            <gradient android:angle="-90" android:endColor="#00071C" android:startColor="#0015FA" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0015FA" />
            <solid android:color="#00071C" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0015FA" />
            <gradient android:angle="-90" android:endColor="#00071C" android:startColor="#0015FA" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>
</selector>
